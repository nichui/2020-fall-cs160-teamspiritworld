<% layout('/WebpageLayouts/Decoration') %>
<link rel="stylesheet" href="/Styles/AddResource.css">
<div class="row">

    <div class="col-xl-8 offset-xl-2 col-md-8 offset-md-2">
        <div class="card shadow">
            <div class="div card-body">
        <h1 class="text-center">Add Resource</h1>
        <form action="/resources" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="resource[title]" required>
                <div class="valid-feedback">
                    Title is good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="resource[location]" required>
                <div class="valid-feedback">
                    Location is good!
                </div>
            </div>




            <!--<input type="file" name="image" multiple>-->

            <!--<div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="location" name="resource[image]" required>
                <div class="valid-feedback">
                    Image Link is good
                </div>
            </div>-->

            <div class="mb-3">
                <label class="form-label" for="Category">Resource Category</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="category-label">Category</span>
                    </div>
                    <input type="text" class="form-control" id="Category" aria-label="Category"
                           aria-describedby="category-label" name="resource[category]" required>
                    <div class="valid-feedback">
                        Category is good
                    </div>
                </div>
            </div>


            <div class="mb-3">
                <label class="form-label" for="location">Content</label>
                <textarea class="form-control" type="text" id="location" name="resource[content]" required></textarea>
                <div class="valid-feedback">
                    Content is good
                </div>
            </div>

            <div class="mb-3">
                <!--<label for="">Upload Images</label>-->
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image(s)..</span>
                        <!--<span class="form-file-button">Browse</span>-->
                    </label>
                </div>
            </div>

            <div class="mb-3">
                <button class="btn btn-success">Add Resource</button>
            </div>

        </form>
        <a href="/resources">All Resources</a>
    </div>
        </div>
    </div>
</div>


